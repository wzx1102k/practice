APP_SRCS	= ${wildcard *.c}
#APP_SRCS = convert.c

APP_OBJS = $(APP_SRCS:.c=.o)

CONV_OBJS = convert.o

OBJS = $(APP_OBJS)
SRCS = $(APP_SRCS)
#Include += -I `Magick++-config --cppflags --cxxflags --ldflags --libs`
#LIB_PATH += -L /usr/local/lib
Include += `pkg-config --cflags --libs MagickCore`
MAKEFILE = Makefile

#CC = cc
CC = gcc

all: demo_conv libconvert.so

$(APP_OBJS): %.o: %.c
	$(CC) -c -fPIC $(Include) $*.c

demo_conv: $(OBJS)
	$(CC) -o $@ $(OBJS) $(Include)
#$(APP_OBJS): %.o: %.c
#	$(CC) -c $(Include) $*.c

libconvert.so: $(CONV_OBJS)
	$(CC) -shared -fPIC -o $@ $(CONV_OBJS) $(Include)
#$(APP_OBJS): %.o: %.c
#	$(CC) -c -fPIC $(Include) $*.c

clean:
	rm -f $(OBJS) demo_conv libconvert.so
rebuild:
	make clean
	make
